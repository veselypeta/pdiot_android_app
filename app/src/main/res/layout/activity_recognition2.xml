<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRecognitionActivity">
    <RelativeLayout
        android:id="@+id/main_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        >

        <ProgressBar
            android:id="@+id/predicted_activity"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/custom_progressbar_drawable"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/predicted_activity_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_baseline_directions_run_24"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_prediction"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/row_one_all_predictions"
        >
    <RelativeLayout
        android:id="@+id/walking_prediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/running_prediction"
        >
        <ProgressBar
            android:id="@+id/walking_prediction_progress"
            android:layout_width="135dp"
            android:layout_height="135dp"
            style="?android:progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:min="0"
            android:progress="60"
            android:progressDrawable="@drawable/custom_progressbar_drawable"
            />
        <ImageView
            android:id="@+id/walking_prediction_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_baseline_directions_walk_24"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/running_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <ProgressBar
            android:id="@+id/running_prediction_progress"
            android:layout_width="135dp"
            android:layout_height="135dp"
            style="?android:progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:max="100"
            android:min="0"
            android:progress="60"
            android:indeterminate="false"
            android:progressDrawable="@drawable/custom_progressbar_drawable"
            />
        <ImageView
            android:id="@+id/running_prediction_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_baseline_directions_run_24"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/standing_prediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/running_prediction"
        >
        <ProgressBar
            android:id="@+id/standing_prediction_progress"
            android:layout_width="135dp"
            android:layout_height="135dp"
            style="?android:progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:max="100"
            android:min="0"
            android:indeterminate="false"
            android:progress="60"
            android:progressDrawable="@drawable/custom_progressbar_drawable"/>
        <ImageView
            android:id="@+id/standing_prediction_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_baseline_accessibility_24"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/row_one_all_predictions"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/row_two_all_predictions"
        >
        <RelativeLayout
            android:id="@+id/climbing_stairs_prediction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/descending_stairs_prediction"
            >
            <ProgressBar
                android:id="@+id/climbing_stairs_prediction_progress"
                android:layout_width="135dp"
                android:layout_height="135dp"
                style="?android:progressBarStyleHorizontal"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:min="0"
                android:progress="60"
                android:progressDrawable="@drawable/custom_progressbar_drawable"
                />
            <ImageView
                android:id="@+id/climbing_stairs_prediction_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_stairs_up"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/descending_stairs_prediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <ProgressBar
                android:id="@+id/descending_stairs_prediction_progress"
                android:layout_width="135dp"
                android:layout_height="135dp"
                style="?android:progressBarStyleHorizontal"
                android:layout_centerInParent="true"
                android:max="100"
                android:min="0"
                android:progress="60"
                android:indeterminate="false"
                android:progressDrawable="@drawable/custom_progressbar_drawable"
                />
            <ImageView
                android:id="@+id/descending_stairs_prediction_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_stairs_down"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lying_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/descending_stairs_prediction"
            >
            <ProgressBar
                android:id="@+id/lying_front_progress"
                android:layout_width="135dp"
                android:layout_height="135dp"
                style="?android:progressBarStyleHorizontal"
                android:layout_centerInParent="true"
                android:max="100"
                android:min="0"
                android:indeterminate="false"
                android:progress="60"
                android:progressDrawable="@drawable/custom_progressbar_drawable"/>
            <ImageView
                android:id="@+id/lying_front_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_lying_front"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_three_all_predictions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_two_all_predictions"
        >

        <RelativeLayout
            android:id="@+id/lying_back_prediction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ProgressBar
                android:id="@+id/lying_back_prediction_progress"
                android:layout_width="135dp"
                android:layout_height="135dp"
                style="?android:progressBarStyleHorizontal"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:min="0"
                android:progress="60"
                android:progressDrawable="@drawable/custom_progressbar_drawable"
                />
            <ImageView
                android:id="@+id/lying_back_prediction_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_lying_back"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sitting_prediction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <ProgressBar
                android:id="@+id/sitting_prediction_progress"
                android:layout_width="135dp"
                android:layout_height="135dp"
                style="?android:progressBarStyleHorizontal"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:min="0"
                android:progress="60"
                android:progressDrawable="@drawable/custom_progressbar_drawable"
                />
            <ImageView
                android:id="@+id/sitting_prediction_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_sitting"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>



    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="500px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/row_three_all_predictions" />

    <TextView
        android:id="@+id/live_x_accel_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accel_x = "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart"/>

    <TextView
        android:id="@+id/live_y_accel_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accel_y = "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_x_accel_data"/>

    <TextView
        android:id="@+id/live_z_accel_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accel_z = "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_y_accel_data"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>